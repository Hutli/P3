<Window x:Class="Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Window.Background>
        <ImageBrush ImageSource="{Binding BackgroundImage}"/>
    </Window.Background>
    <Grid Background="#FF252525">
        <ListView Margin="10"  ItemsSource="{Binding List, Mode=TwoWay}" Background="{x:Null}" FontSize="24" Foreground="#FFEAEAEA">
            <GridView>
                <GridViewColumn Width="auto">
                    <Image>
                        <Image.Source>
                            <BitmapImage UriSource="{Binding Album.Images[1].URL"/>
                        </Image.Source>
                    </Image>
                </GridViewColumn>
                <GridViewColumn Width="auto" DisplayMemberBinding="{Binding Name}" />
                <GridViewColumn Width="auto" DisplayMemberBinding="{Binding Album.ArtistsToString}" />
                <GridViewColumn Width="auto" DisplayMemberBinding="{Binding Duration}" />
                <GridViewColumn Width="auto" DisplayMemberBinding="{Binding TScore}" />
                <GridViewColumn Width="auto" DisplayMemberBinding="{Binding PScore}" />
            </GridView>
        </ListView>
    </Grid>
</Window>
